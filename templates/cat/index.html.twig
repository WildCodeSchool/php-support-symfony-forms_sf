{% extends 'base.html.twig' %}

{% block body %}
    <h1>Kittens! :3</h1>
    {% if cats %}
        <div class="row col-12 justify-content-between">
            {% for cat in cats %}
                <div class="col-4">
                    <div class="card mt-4">
                        <img src="{{ cat.url }}" class="card-img-top" alt="a cute cat">
                        <div class="card-body">
                            <h2 class="card-title">{{ cat.name }}</h2>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        No cats yet 🙁
    {% endif %}
{% endblock %}
