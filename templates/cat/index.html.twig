{% extends 'base.html.twig' %}

{% block body %}
    <div class="container col-8">
        <h1>Kittens! :3</h1>
        <a href="{{ path('cat_add') }}">Add a cat!</a><br>
        <div class="row justify-content-around">
            {% if cats %}
                {% for cat in cats %}
                    <div class="col-4 my-3">
                        <div class="card">
                            <img src="{{ cat.url }}" class="card-img-top" alt="a cute cat">
                            <div class="card-body">
                                <h2 class="card-title">{{ cat.name }}</h2>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                There are no cats yet! 🙁
            {% endif %}
        </div>
    </div>
{% endblock %}
